<mainLayout@GridLayout>:
    rows: 2
    canvas:
        Color:
            rgba: 1, 1, 1, 1

    GridLayout:
        size_hint_y: 0.25
        rows: 2

        GridLayout:
            rows: 2

            TextInput:
                focus: True
                id: ex
                text: "Enter your equation here!"
            GridLayout:
                cols: 2

                Label:
                    id: res
                    text: "result"

                Button:
                    size_hint_x: 0.3
                    text: "Del"
                    on_release: root.rm_char()

    GridLayout:
        rows: 5
        cols: 4

        Button:
            text: "C"
            on_release: root.reset()
        Button:
            text: "("
            on_release: root.add_char("(")
        Button:
            text: ")"
            on_release: root.add_char(")")
        Button:
            text: "/"
            on_release: root.add_char("/")
        Button:
            text: "7"
            on_release: root.add_char("7")
        Button:
            text: "8"
            on_release: root.add_char("8")
        Button:
            text: "9"
            on_release: root.add_char("9")
        Button:
            text: "*"
            on_release: root.add_char("*")
        Button:
            text: "4"
            on_release: root.add_char("4")
        Button:
            text: "5"
            on_release: root.add_char("5")
        Button:
            text: "6"
            on_release: root.add_char("6")
        Button:
            text: "-"
            on_release: root.add_char("-")
        Button:
            text: "1"
            on_release: root.add_char("1")
        Button:
            text: "2"
            on_release: root.add_char("2")
        Button:
            text: "3"
            on_release: root.add_char("3")
        Button:
            text: "+"
            on_release: root.add_char("+")
        Button:
            text: "ans"
            on_release: root.add_char("ans")
        Button:
            text: "0"
            on_release: root.add_char("0")
        Button:
            text: "."
            on_release: root.add_char(".")
        Button:
            text: "="
            on_release: root.eval_ex()

